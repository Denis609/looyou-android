<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Looyouandroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/white_theme_background</item>
        <item name="android:colorControlActivated">@color/blue_color</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white_theme_background</item>
        <item name="colorOnPrimary">@color/blue_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_theme_background</item>
        <item name="colorSecondaryVariant">@color/white_theme_background</item>
        <item name="colorOnSecondary">@color/blue_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_theme_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/login_text</item>
        <item name="hintTextColor">@color/login_text</item>
        <item name="android:textColorHint">@color/login_text</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">@color/outlened_stroke_color</item>
    </style>

    <style name="LoginTextInputEditTextStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SignUpButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TabTextStyle">
        <item name="tabTextColor">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">#00000000</item>
    </style>

    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/gradient_button_fab</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/activate_indicator_color</item>
        <item name="marginHorizontal">0dp</item>
        <item name="android:width">48dp</item>
        <item name="android:height">28dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextProfileStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>